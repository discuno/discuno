  "qualityGates": [
    {
      "stage": "API Design",
      "requirements": [
        "TypeScript interfaces defined",
        "Props documentation complete",
        "API review approved by team",
        "Breaking change impact assessed"
      ]
    },
    {
      "stage": "Implementation",
      "requirements": [
        "Component follows design system patterns",
        "Responsive design implemented",
        "Error states handled",
        "Loading states implemented"
      ]
    },
    {
      "stage": "Testing",
      "requirements": [
        "Unit tests coverage > 90%",
        "Visual regression tests added",
        "Edge cases tested",
        "Performance benchmarks met"
      ]
    },
    {
      "stage": "Accessibility",
      "requirements": [
        "ARIA labels implemented",
        "Keyboard navigation works",
        "Screen reader compatible",
        "Color contrast compliant",
        "Focus management correct"
      ]
    }
  ],
  "automations": [
    {
      "trigger": "issue_moved_to_stage",
      "condition": "Implementation",
      "action": "create_branch",
      "pattern": "component/{component-name}"
    },
    {
      "trigger": "issue_moved_to_stage",
      "condition": "Testing",
      "action": "run_test_suite",
      "tests": ["unit", "visual", "accessibility"]
    },
    {
      "trigger": "issue_moved_to_stage",
      "condition": "Documentation",
      "action": "generate_storybook_template"
    },
    {
      "trigger": "pr_merged",
      "condition": "main",
      "action": "trigger_build_and_publish"
    }
  ],
  "testing": {
    "required": [
      {
        "type": "unit",
        "framework": "vitest",
        "coverage": 90,
        "files": ["*.test.tsx", "*.test.ts"]
      },
      {
        "type": "visual",
        "framework": "chromatic",
        "coverage": "all-stories"
      },
      {
        "type": "accessibility",
        "framework": "axe",
        "coverage": "all-components"
      },
      {
        "type": "integration",
        "framework": "testing-library",
        "scope": "user-interactions"
      }
    ]
  },
  "documentation": {
    "required": [
      {
        "type": "storybook",
        "stories": ["default", "variants", "playground"],
        "docs": "auto-generated"
      },
      {
        "type": "api-docs",
        "format": "jsdoc",
        "coverage": "all-props"
      },
      {
        "type": "usage-examples",
        "format": "mdx",
        "examples": ["basic", "advanced", "integration"]
      }
    ]
  },
  "integrations": {
    "github": {
      "autoLinkPRs": true,
      "branchNaming": "component/{component-name}-{issue-identifier}",
      "prTemplates": {
        "component": "component-pr-template.md",
        "enhancement": "enhancement-pr-template.md"
      }
    },
    "npm": {
      "autoPublish": true,
      "versionStrategy": "semantic",
      "betaReleases": true
    },
    "storybook": {
      "autoGenerate": true,
      "chromatic": true,
      "deployment": "auto"
    }
  },
  "templates": {
    "newComponent": {
      "title": "[COMPONENT] {Component Name}",
      "description": "## Component Overview\n\n### Purpose\n\n### Design Specs\n\n### API Design\n```tsx\ninterface {ComponentName}Props {\n  // Define props\n}\n```\n\n### Acceptance Criteria\n\n### Accessibility Requirements\n\n### Testing Requirements"
    },
    "enhancement": {
      "title": "[ENHANCEMENT] {Component Name} - {Enhancement Description}",
      "description": "## Enhancement Overview\n\n### Current Behavior\n\n### Proposed Changes\n\n### Breaking Changes\n\n### Migration Guide\n\n### Testing Updates"
    },
    "bugFix": {
      "title": "[BUG] {Component Name} - {Bug Description}",
      "description": "## Bug Description\n\n### Current Behavior\n\n### Expected Behavior\n\n### Steps to Reproduce\n\n### Root Cause\n\n### Proposed Fix"
    }
  },
  "releaseProcess": {
    "versioning": "semantic",
    "changelogGeneration": "auto",
    "betaReleases": {
      "enabled": true,
      "branch": "develop",
      "npmTag": "beta"
    },
    "stableReleases": {
      "branch": "main",
      "npmTag": "latest",
      "requiresApproval": true
    }
  },
  "definition_of_done": [
    "Component implementation matches design specs",
    "TypeScript interfaces are complete and exported",
    "Unit tests written with >90% coverage",
    "Visual regression tests added to Storybook",
    "Accessibility requirements met (WCAG 2.1 AA)",
    "Documentation is complete in Storybook",
    "Usage examples provided",
    "Breaking changes documented with migration guide",
    "Integration tested with @discuno/web",
    "Performance benchmarks met",
    "Component published to npm",
    "Design team has approved final implementation"
  ]
}
