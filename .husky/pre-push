echo "ğŸš€ Running pre-push checks..."

# Stash uncommitted changes (including staged)
STASH_NAME="pre-push-$(date +%s)"
git stash push -u -k -m "$STASH_NAME"

STASHED=0
if git stash list | grep "$STASH_NAME" >/dev/null; then
  STASHED=1
fi

cleanup() {
  if [ $STASHED -eq 1 ]; then
    echo "ğŸ”„ Restoring stashed changes..."
    git stash pop --index
  fi
}
trap cleanup EXIT

if [ "$SKIP_TESTS" = "1" ]; then
  echo "âš ï¸  Skipping tests because SKIP_TESTS=1"
else
  echo "ğŸ§ª Running tests..."
  pnpm test:run

  if [ $? -eq 0 ]; then
    echo "âœ… All tests passed!"
  else
    echo "âŒ Tests failed. Please fix failing tests before pushing."
    exit 1
  fi
fi

echo "ğŸ” Running final build check..."
pnpm build

if [ $? -eq 0 ]; then
  echo "âœ… Build successful!"
  echo "ğŸ‰ Ready to push!"
else
  echo "âŒ Build failed. Please fix build errors before pushing."
  exit 1
fi
