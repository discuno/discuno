{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXTAUTH_SECRET",
    "AUTH_DISCORD_ID",
    "AUTH_DISCORD_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "AUTH_EMAIL_FROM",
    "DATABASE_URL",
    "RESEND_API_KEY",
    "STRIPE_SECRET_KEY",
    "CRON_SECRET",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_CONNECT_WEBHOOK_SECRET",
    "NEXTAUTH_URL",
    "SENTRY_AUTH_TOKEN",
    "AUTH_EMAIL_SERVER",
    "X_CAL_SECRET_KEY",
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_X_CAL_ID",
    "NEXT_PUBLIC_CALCOM_API_URL",
    "INNGEST_SIGNING_KEY",
    "INNGEST_EVENT_KEY",
    "SKIP_ENV_VALIDATION"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "!**/.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:run": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["**/*.tsbuildinfo"]
    },
    "clean": {
      "cache": false
    },
    "format:write": {
      "cache": false
    },
    "format:check": {},
    "db:generate": {
      "cache": false,
      "inputs": ["drizzle.config.ts", "apps/web/src/server/db/schema/**"]
    },
    "db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
